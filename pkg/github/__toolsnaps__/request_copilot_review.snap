  "inputSchema": {
    "type": "object",
    "required": [
      "owner",
      "repo",
      "pullNumber"
    ],
    "properties": {
      "owner": {
        "type": "string",
        "description": "Repository owner"
      },
      "pullNumber": {
        "type": "number",
        "description": "Pull request number"
      },
      "repo": {
        "type": "string",
        "description": "Repository name"
      }
    }
  },
